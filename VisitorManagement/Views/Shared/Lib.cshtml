<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - My ASP.NET Core Application</title>
    <link href="https://code.jquery.com/ui/3.4.1/themes/ui-lightness/jquery-ui.css"
          rel="stylesheet">

    <script src="https://code.jquery.com/ui/3.4.1/jquery-ui.js"></script>


    <!-- CSS files -->
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/style.css" rel="stylesheet" />
    <!-- Additional CSS files -->
    <link href="~/path/to/your/other/css/file.css" rel="stylesheet" />

</head>
<body>

    <nav class="navbar navbar-expand-lg bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand text-white" href="#">Visitor Management</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link active text-white" aria-current="page" asp-controller="AdminPage" asp-action="AdminPages">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="AdminPage" asp-action="AddAdmins">Add Admin</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="AdminPage" asp-action="MyRequest">My Request</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white">Log Out</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div >
        @RenderBody()
    </div>
    <!-- JavaScript files -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Additional JavaScript files -->
    <script src="~/path/to/your/other/js/file.js"></script>
</body>
</html>
